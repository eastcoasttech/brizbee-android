            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StatusActivity">
        </activity>
        <activity android:name=".PunchInTaskIdActivity">
        </activity>
        <activity android:name=".PunchInConfirmActivity">
        </activity>
        <activity android:name=".PunchOutConfirmActivity">
        </activity>
        <activity android:name=".TimeCardActivity">
        </activity>
        <activity android:name=".InventoryItemActivity">
        </activity>
        <activity android:name=".InventoryQuantityActivity">
        </activity>
        <activity android:name=".InventoryConfirmActivity">
        </activity>
        <activity android:name=".RegisterStep1Activity">
        </activity>
        <activity android:name=".BarcodeScanActivity">
        </activity>
</application>

</manifest>