<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorBrandGray"
                android:endColor="@color/colorBrandGray"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBrandGrayDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorBrandGrayDark"
                android:startColor="@color/colorBrandGrayDark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBrandGrayDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorWhite"
                android:startColor="@color/colorWhite"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBrandGrayDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>