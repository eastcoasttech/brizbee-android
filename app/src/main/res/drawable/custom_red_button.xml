<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorRedDark"
                android:endColor="@color/colorRed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorRedDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorRedDark"
                android:startColor="@color/colorRed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorRedDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorRedDark"
                android:startColor="@color/colorRed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorRedDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>